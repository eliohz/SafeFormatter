<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Farben -->
  <Color x:Key="PrimaryBg">#FFF7F7F7</Color>
  <Color x:Key="PrimaryFg">#FF222222</Color>
  <Color x:Key="TileBg">#FFFFFFFF</Color>
  <Color x:Key="TileStroke">#22000000</Color>
  <Color x:Key="Accent">#FF0067C0</Color>
  <Color x:Key="Warn">#FFE53935</Color>
  <Color x:Key="Success">#FF2E7D32</Color>
  <SolidColorBrush x:Key="BrushPrimaryBg" Color="{StaticResource PrimaryBg}"/>
  <SolidColorBrush x:Key="BrushPrimaryFg" Color="{StaticResource PrimaryFg}"/>
  <SolidColorBrush x:Key="BrushTileBg" Color="{StaticResource TileBg}"/>
  <SolidColorBrush x:Key="BrushTileStroke" Color="{StaticResource TileStroke}"/>
  <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource Accent}"/>
  <SolidColorBrush x:Key="BrushWarn" Color="{StaticResource Warn}"/>
  <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource Success}"/>

  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource BrushPrimaryBg}"/>
    <Setter Property="Foreground" Value="{StaticResource BrushPrimaryFg}"/>
    <Setter Property="FontSize" Value="16"/>
  </Style>

  <Style x:Key="TileBorder" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource BrushTileBg}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BrushTileStroke}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="16"/>
    <Setter Property="Padding" Value="16"/>
    <Setter Property="Margin" Value="8"/>
  </Style>

  <Style TargetType="Button">
    <Setter Property="Padding" Value="14,10"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="MinWidth" Value="120"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="Padding" Value="10"/>
  </Style>

  <Style TargetType="CheckBox">
    <Setter Property="FontSize" Value="16"/>
  </Style>
</ResourceDictionary>